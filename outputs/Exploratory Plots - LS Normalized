              aes(x = period, y = growth, linetype = Network), geom = "line", se = F,
                       color = "#ae017e", size = 1.3) +
  stat_smooth(data = filter(df, Network == "SYFY", Season_num < 3), 
              aes(x = period, y = growth, linetype = Network), geom = "line", se = F,
                       color = "#dd3497", size = 1.3) +
  stat_smooth(data = filter(df, Network == "USA", Season_num < 3), 
              aes(x = period, y = growth, linetype = Network), geom = "line", se = F,
